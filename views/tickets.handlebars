<style>
    .purchase{
        align: center;
    }

    .fa-search{
        background-color: white;
    }
</style>
<div class="container">
    <div class="row">
        <div class="col-sm"></div>
        <div class="col-lg">
            <h2>Purchase Tickets</h2>
        </div>
        <div class="col-sm">
        </div>
    </div>
    <div class="row">
        <div class="col-sm"></div>
        <!-- Search form -->
        <div><p>Search by Event:</p></div>
        <div class="col-lg">
            <form class="form-inline">
                <input class="form-control form-control-sm ml-3 w-75" type="text" placeholder="Search" aria-label="Search">
                <button type="submit" id="search-ticket"><i class="fa fa-search" aria-hidden="true"></i></button>
            </form>
        </div>
        <div class="col-sm"></div>
    </div>
    <br />
    <div class="row">
        <div class="col-lg">
            <table class="table table-striped">
                <thead>
                    <tr>
                        <th scope="col">Event</th>
                        <th scope="col">Date</th>
                        <th scope="col">Start Time</th>
                        <th scope="col">Price</th>
                     </tr>
                </thead>
                <tbody>
                    {{#each events}}
                    <tr>
                        <td scope="row">{{eventName}}</td>
                        <td>{{date}}</td>
                        <td>{{startTime}}</td>
                        <td>{{ticketPrice}}</td>
                        <!--
                        <td><button type="button" id="btn btn-primary purchase">Purchase</button></td>-->
                    </tr>
                    {{/each}}
                </tbody>
            </table>
        </div>
        <div class="col-xs">
        </div>
    </div>
    <div class="row">
        <div class="col-xs"></div>
        <div class="col-xs"></div>
        <div class="col-xs"></div>
    </div>
</div>
