<style>
    .purchase{
        align: center;
    }

    .fa-search{
        background-color: white;
    }
</style>
<div class="container">
    <div class="row">
        <div class="col-sm"></div>
        <div class="col-lg">
            <h2>Purchase Tickets</h2>
        </div>
        <div class="col-sm">
        </div>
    </div>
    <div class="row">
        <div class="col-sm"></div>
        <!-- Search form -->
        <div><p>Search by Event:</p></div>
        <div class="col-lg">
            <form class="form-inline">
                <input class="form-control form-control-sm ml-3 w-75" type="text" placeholder="Search" aria-label="Search">
                <button type="submit" id="search-ticket"><i class="fa fa-search" aria-hidden="true"></i></button>
            </form>
        </div>
        <div class="col-sm"></div>
    </div>
    <br />
    <div class="row">
        <div class="col-lg">
            <table class="table table-striped">
                <thead>
                    <tr>
                        <th scope="col">Event ID</th>
                        <th scope="col">Event</th>
                        <th scope="col">Date</th>
                        <th scope="col">Start Time</th>
                        <th scope="col">Price</th>
                        <th scope="col">Venue</th>
                     </tr>
                </thead>
                <tbody>
                    {{#each events}}
                    <tr>
                        <td scope="row">{{eventID}}</td>
                        <td scope="row">{{eventName}}</td>
                        <td>{{date}}</td>
                        <td>{{startTime}}</td>
                        <td>{{ticketPrice}}</td>
                        <td>{{venue}}</td>
                        <!--
                        <td><button type="button" id="btn btn-primary purchase">Purchase</button></td>-->
                    </tr>
                    {{/each}}
                </tbody>
            </table>
        </div>
        <div class="col-xs">
        </div>
    </div>
        <div class="row">
        <div class="col-xs"></div>
        <div class="col-lg" >
            <h2 class="event-venue-header">Add a New Event!</h2>
        </div>
        <div class="col-xs"></div>
    </div>

    <form id="add-event" action="/tickets" method="POST">
        <div class="row">
            <label for="event-name">Event Name</label>
            <input type="text" class="form-control" name="eventName" placeholder="Event Name">
            <label for="date">Date</label>
            <input type="date" class="form-control" name="date" placeholder="Date">
            <label for="start-time">Start Time</label>
            <input type="datetime-local" class="form-control" name="startTime" placeholder="10/10/2020 10:30">
            <label for="end-time">End Time</label>
            <input type="datetime-local" class="form-control" name="endTime" placeholder="10/10/2020 10:30">
            <label for="price">Price</label>
            <input type="text" class="form-control" name="ticketPrice" placeholder="$00.00">
            <label for="organizer-id">Organizer ID</label>
            <input type="text" class="form-control" name="organizerID" placeholder="Organizer ID">
            <label for="start-time">Venue ID</label>
            <input type="text" class="form-control" name="venueID" placeholder="Event Venue ID">
            <div class="text-center">
                <button type="submit" class="btn btn-primary btn-lg">Add Event</button>
            </div>
        </div>
    </form>
</div>
